<div ng-app="quizzyApp">
  <div ng-controller="QuizController">

    <div ng-show="quizView">
      <!-- in "quizzes" refers to .quizzes method that queried quizzes -->
      <!-- on ng-click, execute quizSelected method, passing in (quiz) -->
      <h3 ng-repeat="quizAB in quizzes" ng-click="quizSelected(quizAB)">
        {{quizAB.title}}
      </h3>
    </div>

    <div ng-show="questionsView">
       <h3>{{question.question}}</h3>
      <form ng-submit="submitQuestion(question)">
        <div ng-repeat="choice in question.choices">
          <input type="radio" ng-model="question.selection" ng-value="choice">
          <label>{{choice}}</label>
        </div>
        <input type="submit">
       <p>Correct Answers: {{correctAnswers}} / Total Questions: {{totalQuestions}}</p>
      </form>

      <h3>Update Question</h3>
      <form ng-submit="updateQuestion()">
      <input ng-model="question.question">
        <input type="submit" value="Update">
      </form>

    </div>

    <div ng-show="scoreView">
      <h1>Your score is: {{(correctAnswers / totalQuestions)*100}}%</h1>
    </div>
  </div>
</div>